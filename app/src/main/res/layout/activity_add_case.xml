<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabHost"
            tools:context=".AddCase">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:id="@+id/contactInfo"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <!--Name:-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textSize="23sp"
                            android:textColor="#333"/>
                        <!--<AutoCompleteTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerNames"
                            android:prompt="@string/spinner_title"
                            android:hint="@string/spinner_title"
                            android:entries="@array/nameList"
                            android:singleLine="true"
                            android:textSize="17sp"
                            android:layout_margin="5dp"
                            android:completionThreshold="1"
                            android:dropDownHeight="150dp"
                            android:inputType="textAutoComplete"/>-->
                        <Button
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/spinnerNames"
                            android:hint="@string/spinner_title"
                            android:textColorHint="#999999"
                            android:paddingLeft="10dp"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:textSize="19sp"
                            android:background="#ddd"
                            />

                        <!--Company:-->
                        <TextView
                            android:text="@string/company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"
                            /><TextView
                            android:id="@+id/company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"/>

                        <!--Email:-->
                        <TextView
                            android:text="@string/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#333"
                            android:layout_marginTop="15dp"
                            /><TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"/>

                        <!--Tel:-->
                        <TextView
                            android:text="@string/tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#333"
                            android:layout_marginTop="15dp"
                            /><TextView
                            android:id="@+id/tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"/>

                        <!--Add New Contact Button:-->
                        <!--<Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/addContactBtn"
                            android:text="@string/add_contact"
                            android:textSize="15sp"
                            android:layout_margin="5dp"/>-->
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/caseParticulars"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_margin="15dp">

                        <!--Assignee-->
                        <TextView
                            android:text="@string/assignee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id = "@+id/assigneeName"
                            android:text="@string/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#000099"
                            android:layout_marginTop="10dp"/>

                        <!--Status-->
                        <TextView
                            android:text="@string/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="23sp"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <Spinner
                                android:id ="@+id/spinnerStatus"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:entries="@array/status"
                                android:singleLine="true"
                                android:textSize="17sp"
                                android:background="#E4E4E4"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/spinner_arrow"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/case_desc"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:textColor="#333"/>

                            <TextView
                                android:id="@+id/caseDesc"
                                android:gravity="top|left"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences|textMultiLine"
                                android:hint="@string/case_desc"
                                android:textColorHint="#999999"
                                android:lines="3"
                                android:maxLength="400"
                                android:background="#ddd"
                                android:textColor="#333"
                                android:textSize="17sp"/>

                        <!--Action Taken-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/action_taken"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:textColor="#333"/>

                            <TextView
                                android:id="@+id/actionTaken"
                                android:gravity="top|left"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences|textMultiLine"
                                android:hint="@string/action_taken"
                                android:textColorHint="#999999"
                                android:lines="3"
                                android:maxLength="400"
                                android:background="#ddd"
                                android:textColor="#333"
                                android:textSize="17sp"/>

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/submit"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:id ="@+id/submitBtn"
                android:layout_margin="10dp"/>

        </RelativeLayout>
</RelativeLayout>