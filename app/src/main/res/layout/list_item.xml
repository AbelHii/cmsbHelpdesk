<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#222"
                android:text="@string/id"
                android:id="@+id/IDMain"
                android:layout_marginRight="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/IDMain"
                android:layout_toRightOf="@+id/IDMain"
                android:textSize="17sp"
                android:singleLine="true"
                android:textColor="#000099"
                android:text="@string/user"
                android:id="@+id/userMain"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/syncStatus"
                android:textSize="17sp"
                android:singleLine="true"
                android:textColor="#5a5a5a"
                android:text="@string/status"
                android:id="@+id/statusMain"
                android:layout_marginRight="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="@string/syncStatus"
                android:textColor="#FFDD00"
                android:gravity="center"
                android:background="@drawable/circle"
                android:id="@+id/syncStatus"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/IDMain"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="17sp"
                android:text="@string/desc"
                android:textColor="#990000"
                android:id="@+id/descMain"
                android:singleLine="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>